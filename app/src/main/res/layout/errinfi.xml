<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/item_min_height"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/textViewErrIndex"
        android:layout_width="70dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="序号"
        android:textColor="@color/button_text"
        android:textSize="@dimen/form_text_font_size" />

    <LinearLayout
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/cut_line" >
    </LinearLayout>

    <TextView
        android:id="@+id/textViewErrCmd"
        android:layout_width="70dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="状态码(H)"
        android:textColor="@color/button_text"
        android:textSize="@dimen/form_text_font_size" />

    <LinearLayout
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/cut_line" >
    </LinearLayout>

    <TextView
        android:id="@+id/textViewErrInfo"
        android:layout_width="160dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="含义"
        android:textColor="@color/button_text"
        android:textSize="@dimen/form_text_font_size" />

    <LinearLayout
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/cut_line" >
    </LinearLayout>

    <TextView
        android:id="@+id/textViewErrCount"
        android:layout_width="70dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="错误计时"
        android:textColor="@color/button_text"
        android:textSize="@dimen/form_text_font_size" />

    <LinearLayout
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/cut_line" >
    </LinearLayout>

    <TextView
        android:id="@+id/textViewErrTime"
        android:layout_width="90dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="时间"
        android:textColor="@color/button_text"
        android:textSize="@dimen/form_text_font_size" />

</LinearLayout>