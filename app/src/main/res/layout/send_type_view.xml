<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/layoutSendTypeNormal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/layout_ex_click"
        android:clickable="true"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_height"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:gravity="center"
            android:text="@string/strSendNormal"
            android:textColor="@color/button_text"
            android:textSize="@dimen/button_text_font_size" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gainsboro" >
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutSendTypeSelf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/layout_ex_click"
        android:clickable="true"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_height"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:gravity="center"
            android:text="@string/strSendSelf"
            android:textColor="@color/button_text"
            android:textSize="@dimen/button_text_font_size" />

    </LinearLayout>

</LinearLayout>