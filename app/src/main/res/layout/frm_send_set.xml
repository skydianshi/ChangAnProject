<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:minHeight="@dimen/item_min_height"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/layoutCheck"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/checkBoxFrmSend"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:background="@mipmap/check" />

            <TextView
                android:id="@+id/textViewFrmSendIndex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="3dp"
                android:text="100"
                android:textColor="@color/button_text"
                android:textSize="@dimen/form_text_font_size" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/gainsboro" >
        </LinearLayout>

        <TextView
            android:id="@+id/textViewFrmSendSt"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:background="@drawable/control_backgroup"
            android:gravity="center"
            android:text="@string/strFrmST"
            android:textColor="@color/button_text"
            android:textSize="@dimen/form_text_font_size" />

        <LinearLayout
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/gainsboro" >
        </LinearLayout>

        <TextView
            android:id="@+id/textViewFrmSendType"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:background="@drawable/control_backgroup"
            android:gravity="center"
            android:text="@string/strDataFrm"
            android:textColor="@color/button_text"
            android:textSize="@dimen/form_text_font_size" />

        <LinearLayout
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/gainsboro" >
        </LinearLayout>

        <EditText
            android:id="@+id/editTextFrmSendID"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:ems="8"
            android:text="00000001"
            android:textColor="@color/button_text"
            android:textSize="@dimen/form_text_font_size" >
        </EditText>

        <LinearLayout
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/gainsboro" >
        </LinearLayout>

        <EditText
            android:id="@+id/editTextFrmSendData"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:text="00 11 22 33 44 55 66 77"
            android:textColor="@color/button_text"
            android:textSize="@dimen/form_text_font_size" >
        </EditText>
    </LinearLayout>

</LinearLayout>